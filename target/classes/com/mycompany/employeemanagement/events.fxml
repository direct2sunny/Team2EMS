<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="725.0" prefWidth="1065.0" spacing="10" stylesheets="@../../../styles/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.employeemanagement.AttendanceController">
    <Label styleClass="header" text="Employee Attendance Tracker" />
    <HBox alignment="CENTER" spacing="10">
        <Label text="Start Date:" />
        <DatePicker fx:id="startDatePicker" />
        <Label text="Start Time:" />
        <ComboBox fx:id="startTimePicker" />
        <Label text="End Date:" />
        <DatePicker fx:id="endDatePicker" />
        <Label text="End Time:" />
        <ComboBox fx:id="endTimePicker" />
        <Button graphicTextGap="10" onAction="#handleLoadAttendance" text="Load Attendance">
            <graphic>
                <FontAwesomeIconView glyphName="CALENDAR" />
            </graphic>
        </Button>
    </HBox>
    <TableView fx:id="employeeTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="firstNameColumn" text="First Name" />
            <TableColumn fx:id="lastNameColumn" text="Last Name" />
            <TableColumn fx:id="dateColumn" text="Date" />
            <TableColumn fx:id="startTimeColumn" text="Start Time" />
            <TableColumn fx:id="endTimeColumn" text="End Time" />
            <TableColumn fx:id="statusColumn" text="Status" />
            <TableColumn fx:id="totalHoursColumn" text="Total Hours Worked" />
        </columns>
    </TableView>
    <HBox alignment="CENTER" spacing="10">
      <Button fx:id="back" mnemonicParsing="false" text="Back">
         <graphic>
            <FontAwesomeIconView fill="WHITE" glyphName="BACKWARD" />
         </graphic>
      </Button>
        <Button graphicTextGap="10" onAction="#handlePresent" text="Mark Present">
            <graphic>
                <FontAwesomeIconView glyphName="CHECK" />
            </graphic>
        </Button>
        <Button graphicTextGap="10" onAction="#handleAbsent" text="Mark Absent">
            <graphic>
                <FontAwesomeIconView glyphName="TIMES" />
            </graphic>
        </Button>
        <Button fx:id="close" mnemonicParsing="false" onAction="#close" text="CLOSE">
            <graphic>
                <FontAwesomeIconView fill="WHITE" glyphName="CLOSE" />
            </graphic>
        </Button>
    </HBox>
</VBox>
