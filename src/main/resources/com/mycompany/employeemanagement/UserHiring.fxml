<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.employeemanagement.UserHiringController">
    <children>
        <AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@dashboardDesign.css">
            <children>
                <TableView fx:id="userHiringTableView" layoutX="10.0" layoutY="62.0" prefHeight="227.0" prefWidth="780.0">
                    <columns>
                        <TableColumn fx:id="tcUserHiringPostId" text="ID" />
                        <TableColumn fx:id="tcUserTitle" text="Title" />
                        <TableColumn fx:id="tcUserDescription" prefWidth="505.0" text="Description" />
                        <TableColumn fx:id="tcUserCreatedAt" prefWidth="114.0" text="Created At" />
                    </columns>
                </TableView>
                <Button fx:id="applyBtn" layoutX="334.0" layoutY="313.0" onAction="#handleApply" text="Apply" />
                <Button fx:id="rejectBtn" layoutX="423.0" layoutY="313.0" onAction="#handleReject" text="Reject" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
